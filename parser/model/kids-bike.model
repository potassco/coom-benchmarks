// Bike
product {
	Color    color			  
	Option   wheelSupport
	Wheel    wheels
}

enumeration Option {
	Yes
	No
}

enumeration Wheel {
	W14
	W16
	W18
	W20
}

enumeration Color {
	Red
	Green
	Yellow
	Blue
}


// Bike
behavior {
	combinations  (wheelSupport	 wheels)
	allow         (Yes           (W14, W16))
	allow         (No            (W18, W20))
}

behavior {
	condition color = Yellow
	require wheels = W18 || wheels = W20
}


